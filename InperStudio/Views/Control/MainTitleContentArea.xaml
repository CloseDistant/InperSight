<Border x:Class="InperStudio.Views.Control.MainTitleContentArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InperStudio.Views.Control"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" MaxWidth="150">
    <TextBlock x:Name="dic_name" Text="{Binding InperGlobalClass.DataFolderName,UpdateSourceTrigger=PropertyChanged}" hc:TextBlockAttach.AutoTooltip="True" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" HorizontalAlignment="Center"/>
</Border>
