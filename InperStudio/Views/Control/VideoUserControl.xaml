            <Button Margin="20 0 0 0" Style="{StaticResource InperFreeButton}" Width="20" Height="20" x:Name="Screen" HorizontalAlignment="Right" >
                <Image Source="/Lib/Images/New/video_cut.png" />
            </Button>
