    <UserControl.Resources>
        <global:InperGlobalClass x:Key="InperGlobalClass" />
    </UserControl.Resources>
    <Grid HorizontalAlignment="Stretch">
        <WrapPanel HorizontalAlignment="Right" Margin="0 0 20 0">
            <TextBlock Text="Record" Foreground="#333333" VerticalAlignment="Center" Margin="0 0 8 0"/>
