                            <!--<Border.Effect>
                                <DropShadowEffect Color="#aaa" Direction="230" Opacity=".3" x:Name="effect" BlurRadius="4" ShadowDepth="5"/>
                            </Border.Effect>-->
                            <ContentPresenter x:Name="content" />
